{
  "name": "api-node",
  "version": "1.0.0",
  "description": "API em NodeJs com TDD e Clean Architecture",
  "main": "src/main/index.js",
  "scripts": {
    "start": "node src/main/index.js",
    "test": "jest --colors --noStackTrace --passWithNoTests --runInBand",
    "test:unit": "npm test -- --watch -c jest-unit-config.js",
    "test:integration": "npm test -- --watch -c jest-integration-config.js",
    "test:staged": "npm test -- --findRelatedTests --silent",
    "test:ci": "npm test -- --coverage --silent"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/filipecsoares/api-node.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/filipecsoares/api-node/issues"
  },
  "homepage": "https://github.com/filipecsoares/api-node#readme",
  "devDependencies": {
    "@shelf/jest-mongodb": "^1.1.5",
    "husky": "^4.3.8",
    "jest": "^29.3.1",
    "lint-staged": "^10.0.2",
    "standard": "^14.3.1",
    "supertest": "^4.0.2"
  },
  "dependencies": {
    "bcrypt": "^5.0.0",
    "express": "^4.17.3",
    "fast-glob": "^3.2.4",
    "jsonwebtoken": "^9.0.0",
    "mongodb": "^3.5.8",
    "validator": "^12.2.0"
  }
}
